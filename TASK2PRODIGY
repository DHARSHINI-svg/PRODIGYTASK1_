        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      }

      h1 {
        margin-bottom: 20px;
        color: #333;
      }

      .time {
        font-size: 48px;
        margin-bottom: 20px;
        font-weight: bold;
      }

      button {
        padding: 10px 20px;
        margin: 5px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
      }

      button:hover {
        opacity: 0.8;
      }

      .start {
        background: #43e97b;
        color: white;
      }
      .pause {
        background: #ff9f43;
        color: white;
      }
      .reset {
        background: #ff4757;
        color: white;
      }
      .lap {
        background: #3742fa;
